{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": ["node"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/**/*.ts", "src/components/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
